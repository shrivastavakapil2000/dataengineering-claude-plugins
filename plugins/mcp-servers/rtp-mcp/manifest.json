{
  "$schema": "../../../schemas/manifest.schema.json",
  "name": "rtp-mcp",
  "displayName": "RTP Database MCP",
  "version": "1.0.0",
  "category": "mcp-servers",
  "description": "Read-only access to the RTP PostgreSQL database â€” audiences, deliveries, vendors, failed jobs",
  "author": "data-engineering-team",
  "repository": "https://github.com/resonate/audience-delivery-mcp",
  "tags": ["mcp", "rtp", "postgres", "database", "audiences", "deliveries"],
  "keywords": ["rtp", "postgresql", "audience", "delivery", "vendor", "database"],
  "dependencies": {
    "tools": ["python"]
  },
  "prerequisites": {
    "plugins": [],
    "permissions": [
      "VPN access to Resonate internal network",
      "RTP database credentials (username and password)"
    ]
  },
  "permissions": {
    "network": true
  },
  "configuration": {
    "env": {
      "RTP_DB_HOST": {
        "description": "RTP database hostname",
        "required": false,
        "default": "pgprod01.proda.aws.resonatedigital.net"
      },
      "RTP_DB_USER": {
        "description": "RTP database username",
        "required": true
      },
      "RTP_DB_PASSWORD": {
        "description": "RTP database password",
        "required": true
      }
    }
  }
}
